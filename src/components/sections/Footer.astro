---
import { site } from "../../data/site";
const currentYear = new Date().getFullYear();
---

<footer class="border-t-2 border-black bg-white py-16 px-6">
    <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
            <!-- Columna 1: Información -->
            <div>
                <h3 class="font-black text-2xl uppercase tracking-tight mb-4">
                    {site.name}
                </h3>
                <p class="text-gray-600 text-sm mb-2">
                    <strong class="text-black">{site.realName}</strong>
                </p>
                <p class="text-gray-600 text-sm">
                    Desarrollador Fullstack<br />
                    Software a la medida<br />
                    México
                </p>
            </div>

            <!-- Columna 2: Enlaces -->
            <div>
                <h4 class="font-bold uppercase tracking-wide text-sm mb-4">
                    Navegación
                </h4>
                <ul class="space-y-2 text-sm">
                    <li>
                        <a
                            href="#services"
                            class="text-gray-600 hover:text-black transition-colors"
                        >
                            Servicios
                        </a>
                    </li>
                    <li>
                        <a
                            href="#process"
                            class="text-gray-600 hover:text-black transition-colors"
                        >
                            Proceso
                        </a>
                    </li>
                    <li>
                        <a
                            href="#projects"
                            class="text-gray-600 hover:text-black transition-colors"
                        >
                            Proyectos
                        </a>
                    </li>
                    <li>
                        <a
                            href="#stack"
                            class="text-gray-600 hover:text-black transition-colors"
                        >
                            Stack
                        </a>
                    </li>
                    <li>
                        <a
                            href="#faq"
                            class="text-gray-600 hover:text-black transition-colors"
                        >
                            FAQ
                        </a>
                    </li>
                    <li>
                        <a
                            href="#contact"
                            class="text-gray-600 hover:text-black transition-colors"
                        >
                            Contacto
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Columna 3: Legal y Redes -->
            <div>
                <h4 class="font-bold uppercase tracking-wide text-sm mb-4">
                    Legal y Social
                </h4>
                <ul class="space-y-2 text-sm mb-6">
                    <li>
                        <a
                            href="/privacidad"
                            class="text-gray-600 hover:text-black transition-colors font-medium"
                        >
                            Política de Privacidad
                        </a>
                    </li>
                </ul>

                <div class="space-y-2">
                    <a
                        href={site.social.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 text-sm text-gray-600 hover:text-black transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            role="img"
                            aria-label="GitHub"
                        >
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                        GitHub
                    </a>
                </div>
            </div>
        </div>

        <!-- Separador -->
        <div class="border-t border-black pt-8">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <p class="text-xs font-mono text-gray-500 text-center md:text-left">
                    © {currentYear} {site.realName} ({site.name}). Todos los derechos reservados.
                </p>

                <div class="flex items-center gap-2">
                    <span class="text-xs font-mono text-gray-400">
                        Hecho con
                    </span>
                    <a
                        href="https://astro.build"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-xs font-mono text-gray-600 hover:text-black transition-colors font-bold"
                    >
                        Astro
                    </a>
                    <span class="text-xs font-mono text-gray-400">+</span>
                    <a
                        href="https://tailwindcss.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-xs font-mono text-gray-600 hover:text-black transition-colors font-bold"
                    >
                        Tailwind
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>
