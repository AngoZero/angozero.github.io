---
import { processSteps } from "../../data/process";
---

<section id="process" class="py-32 px-6 bg-white text-black border-t border-black">
    <div class="max-w-7xl mx-auto">
        <div class="mb-16">
            <div class="flex items-center gap-4">
                <div class="h-2 w-24 bg-black"></div>
                <p
                    class="text-xs font-mono uppercase tracking-widest text-gray-500"
                >
                    [ Proceso ]
                </p>
            </div>
            <h2
                class="font-black text-[clamp(2.5rem,9vw,7.5rem)] md:text-[clamp(3rem,10vw,8rem)] leading-[0.9] tracking-tighter uppercase mt-6 break-words"
            >
                Ruta
                <span
                    class="block text-transparent bg-clip-text bg-gradient-to-b from-gray-600 via-gray-400 to-gray-100"
                >
                    de trabajo
                </span>
            </h2>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {processSteps.map((step, index) => (
                <div class="border-2 border-black p-6 flex flex-col gap-4 bg-white shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition-transform duration-300 ease-out hover:-translate-y-2 hover:translate-x-2">
                    <div class="flex items-center justify-between">
                        <span class="font-mono text-xs font-bold uppercase">
                            Paso 0{index + 1}
                        </span>
                        <span class="text-4xl font-black text-gray-200">
                            {index + 1}
                        </span>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold uppercase tracking-tight break-words leading-tight">
                            {step.title}
                        </h3>
                        <p class="text-gray-600 mt-2">{step.description}</p>
                    </div>
                    <p class="text-xs font-mono uppercase tracking-widest text-gray-500">
                        {step.detail}
                    </p>
                </div>
            ))}
        </div>
    </div>
</section>
