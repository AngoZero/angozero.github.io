---
import { services } from "../../data/services";
---

<section
    id="services"
    class="relative py-32 px-6 bg-white text-black border-t border-black overflow-hidden"
>
    <div
        class="absolute inset-0 z-0 h-full w-full bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:24px_24px]"
    >
    </div>

    <div class="relative z-10 max-w-7xl mx-auto">
        <div class="mb-16 md:mb-20 fade-in-up">
            <p class="text-xs font-mono text-gray-500 uppercase tracking-widest">
                [ Servicios ]
            </p>
            <h2
                class="font-black text-[clamp(2.5rem,9vw,7.5rem)] md:text-[clamp(3rem,10vw,8rem)] leading-[0.9] tracking-tighter uppercase break-words"
            >
                Software
                <span
                    class="block text-transparent bg-clip-text bg-gradient-to-b from-gray-700 via-gray-500 to-gray-400"
                >
                    a la medida
                </span>
            </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            {services.map((service, index) => (
                <article class="border-2 border-black bg-white shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] p-8 flex flex-col gap-6 transition-transform duration-300 ease-out hover:-translate-y-2 hover:translate-x-2 fade-in-up" style={`transition-delay: ${index * 100}ms`}>
                    <div class="flex items-center justify-between">
                        <span class="font-mono text-sm font-bold">
                            0{index + 1}
                        </span>
                        <div class="h-[2px] w-16 bg-black" />
                    </div>

                    <div>
                        <h3 class="text-2xl font-bold uppercase tracking-tight break-words leading-tight">
                            {service.title}
                        </h3>
                        <p class="text-gray-600 mt-3 font-medium">
                            {service.description}
                        </p>
                    </div>

                    <ul class="text-sm font-mono uppercase tracking-wide text-gray-500 flex flex-col gap-2">
                        {service.outcomes.map((outcome) => (
                            <li class="flex items-center gap-2">
                                <span class="h-[2px] w-4 bg-black" />
                                {outcome}
                            </li>
                        ))}
                    </ul>
                </article>
            ))}
        </div>
    </div>
</section>
