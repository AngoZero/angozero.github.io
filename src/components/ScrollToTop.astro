---
// Botón de scroll to top con estilo brutalista
---

<button
    id="scroll-to-top"
    aria-label="Volver arriba"
    class="fixed bottom-8 right-8 z-50 w-14 h-14 border-2 border-black bg-white shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:-translate-y-1 hover:translate-x-1 transition-all duration-200 opacity-0 pointer-events-none"
>
    <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-6 h-6 mx-auto"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
    >
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 10l7-7m0 0l7 7m-7-7v18" />
    </svg>
</button>

<script>
    // Script para mostrar/ocultar el botón y hacer scroll
    const scrollBtn = document.getElementById('scroll-to-top');

    if (scrollBtn) {
        // Mostrar/ocultar el botón según scroll
        const toggleButton = () => {
            if (window.scrollY > 500) {
                scrollBtn.classList.remove('opacity-0', 'pointer-events-none');
                scrollBtn.classList.add('opacity-100');
            } else {
                scrollBtn.classList.add('opacity-0', 'pointer-events-none');
                scrollBtn.classList.remove('opacity-100');
            }
        };

        // Scroll suave hacia arriba
        const scrollToTop = () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        };

        // Event listeners
        window.addEventListener('scroll', toggleButton, { passive: true });
        scrollBtn.addEventListener('click', scrollToTop);

        // Check inicial
        toggleButton();
    }
</script>

<style>
    #scroll-to-top {
        transition: opacity 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease;
    }
</style>
